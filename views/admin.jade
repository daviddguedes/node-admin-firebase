html
    head
        title('Inicio')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')

    body
        div(class='container')

            div(class='row')
            
                div(class='col-md-4')
                    
                div(class='col-md-4')
                    form(action='/admin', method='POST')
                        div(class='form-group')
                            label(for='email')
                                Digite seu email
                            input(type='email', class='form-control', id='email', name='email', placeholder='Digite aqui')

                        div(class='form-group')
                            label(for='password')
                                Digite a senha                            
                            input(type='password', class='form-control', id='password', name='password', placeholder='Digite aqui')

                        input(type='submit', class='btn btn-danger', value='Cadastrar')

                div(class='col-md-4')

            div(class='row')
            
                if mensagem
                    h1= mensagem
                else
                    h1= "Esperando retorno"